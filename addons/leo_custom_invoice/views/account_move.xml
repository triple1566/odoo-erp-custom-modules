<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- This is an inherited module from the invoice list view -->
    <record id="leo_appointment_list_view_inherited" model="ir.ui.view">
        <field name="name">Inherited list view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="appointment_id" />
            </xpath>

            <xpath expr="//list" position="inside">
                <field name="appointment_price" />
            </xpath>

            <xpath expr="//field[@name='invoice_date_due']" position="replace"/>
        </field>
    </record>

    <!-- This is an inherited module from the invoice form view -->
    <record id="leo_appointment_form_view_inherited" model="ir.ui.view">
        <field name="name">Inherited form view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group name="name" string="Added Field">
                    <field name="appointment_id" />
                </group>
            </xpath>
        </field>
    </record>

    <!-- This action lets the inherited views render when the menu item is clicked. -->
    <record id="inherited_view_action" model="ir.actions.act_window">
        <field name="name">inherited view action</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
