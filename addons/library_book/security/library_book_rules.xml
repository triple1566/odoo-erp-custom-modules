<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="library_book_user_own_records_rule" model="ir.rule">
        <!--Description that is shown in settings/technical/record rules-->
        <field name="name">Library Book: users see own books</field>
        <!--Specifies where the rule should apply to. ref="external ID of model"-->
        <field name="model_id" ref="model_library_book"/>
        <!--The actual rule. Ours mean "only records where create_uid==current_user"-->
        <field name="domain_force">[('create_uid','=',user.id)]</field>
        <!--This field specifies who (user-wise) the rule applies to.-->
        <!--base.group_user includes all internal users except admins-->
        <!--eval="[(4, ref(...))]" means that this is a many2many update syntax-->
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>