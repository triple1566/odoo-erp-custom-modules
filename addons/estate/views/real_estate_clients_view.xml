<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="real_estate_clients_list_view" model="ir.ui.view">
        <field name="name">client list view</field>
        <field name="model">real_estate_clients</field>
        <field name="arch" type="xml">
            <list>
                <field name="id" />
                <field name="create_uid" />
                <field name="name" />
                <field name="age" />
                <field name="isvip" />
                <field name="profit" />
                <field name="region" />
            </list>
        </field>
    </record>

    <record id="real_estate_clients_form_view" model="ir.ui.view">
        <field name="name">cilent form view</field>
        <field name="model">real_estate_clients</field>
        <field name="arch" type="xml">
            <form>
                <group name="id" string="ID">
                    <field name="id" />
                    <field name="create_uid"/>
                </group>
                <group name="client_info" string="Client Information">
                    <field name="name" />
                    <field name="age" />
                    <field name="isvip" />
                    <field name="profit" />
                    <field name="region" />
                </group>
            </form>
        </field>
    </record>

    <record id="real_estate_clients_action" model="ir.actions.act_window">
        <field name="name">Client Action</field>
        <field name="res_model">real_estate_clients</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
